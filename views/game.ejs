<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="puzzle, project" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="icon" type="text/png" href="/static/images/favicon.png" />
    <title>Wordle Lookalike Project</title>
  </head>
  <body>
    <div id="error"></div>
    <div id="message"></div>
    <div id="container">
      <table id="gameGrid">
        <% for (let i = 0; i < gridSize; i++) { %>
        <tr id="gridRow<%= i %>">
          <% for (let j = 0; j < gridSize; j++) { %>
          <td id="tile<%= i %><%= j %>"></td>
          <% } %>
        </tr>
        <% } %>
      </table>
    </div>
    <form action="/" method="post">
      <input type="text" name="word" />
      <button type="submit" name="submit">Submit</button>
    </form>
    <button onclick="evaluateInput()">Click</button>
    <script src="/index.js"></script>
  </body>
</html>
